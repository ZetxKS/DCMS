{% extends "admin/template.twig" %}
{% block title %}Авторизация
{% endblock %}
{% block content %}
	<div class="d-flex vh-100 flex-column justify-content-center align-items-center">
		<form action="{{ path('dcms_login') }}">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('auth') }}">
			<div class="p-3 shadow p-3 mb-5 rounded" style="height: fit-content; width: fit-content">
				<div class="input-group flex-nowrap mb-2">
					<span class="input-group-text" id="addon-wrapping">@</span>
					<input type="text" name="_username" class="form-control" placeholder="Логин" aria-label="Логин" aria-describedby="addon-wrapping">
				</div>
				<div class="input-group flex-nowrap mb-2">
					<span class="input-group-text" id="addon-wrapping">#</span>
					<input type="password" name="password" class="form-control" placeholder="Пароль" aria-label="Пароль" aria-describedby="addon-wrapping">
				</div>
				<div class="d-flex justify-content-between">
					<a class="btn btn-outline-secondary">На сайт</a>
					<button class="btn btn-success">Войти</button>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
